<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>

<%= form_tag '/login', method: 'post' do %>
  <div>
    <%= label_tag 'Email' %>
    <%= text_field_tag 'email' %>
  </div>

  <div>
    <%= label_tag 'Password' %>
    <%= password_field_tag 'password' %>
  </div>

  <%= submit_tag 'Login' %>
<% end %>
