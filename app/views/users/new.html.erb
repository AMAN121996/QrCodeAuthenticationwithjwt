<!-- app/views/users/new.html.erb -->
<h1>Signup</h1>

<%= form_for @user, url: signup_path do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit 'Signup' %>
<% end %>

<%= link_to 'Back to Home', root_path %>
